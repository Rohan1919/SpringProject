package com.lti.hr.web.controllers;

import javax.servlet.http.HttpServletRequest;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
public class HrController {
	
	@RequestMapping("*.do")
	public String getHomePage() {
		return "Home";
	}
	
	@RequestMapping("login.do")
	public String getLoginPage() {
		return "Login";
	}
	
	@RequestMapping("authenticate.do")
	public String autheticateUser(HttpServletRequest req) {
		String userNm=req.getParameter("");
		String passWd=req.getParameter("");
		System.out.println(userNm+" "+passWd);
		return "MainMenu";
		
	}
	
	

}
